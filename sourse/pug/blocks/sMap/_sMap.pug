mixin sMapBotItem(data)
	.col-lg-4
		+e.bot-item.text-sm-center
			+e.H4.title=data.title
			+e.txt=data.txt
			+e.link(href=data.href)=data.linkTxt

mixin sMapItem(data)
	+e.item(style=`top: ${data.top}; left: ${data.left};`)
		+e.dot
			+e.wawe--1
			+e.wawe--2
			+e.wawe--3
			+e.tooltip.text-center
				+pic(data.imgName)(class="sMap__flag")
				+e.bold=data.locationBold
				+e.light=data.locationLight