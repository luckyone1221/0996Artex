extends ../layout/main.pug

include ../blocks/header/_header.pug
include ../blocks/topLine/_topLine.pug
include ../blocks/top-nav/_top-nav.pug 
include ../blocks/headerBlock/_headerBlock.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sContent/_sContent.pug
 
include ../blocks/sContact/_sContact.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sAbout/_sAbout.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sCatalog/_sCatalog.pug
include ../blocks/sClients/_sClients.pug
include ../blocks/sServices/_sServices.pug
include ../blocks/sMore/_sMore.pug
include ../blocks/sAwards/_sAwards.pug
include ../blocks/sTop/_sTop.pug
include ../blocks/sReview/_sReview.pug
include ../blocks/footer/_footer.pug

block variables
	- let  mainPage= 'main-page' 
	- let  bg='about.png'

block title
	- let  title= index.head.title
	title= title
block pagecontent
	+mob-mnu()
		li.menu-item: a.current(href="/") Home
		li.menu-item: a(href="/about.html") About
		li.menu-item: a(href="/contact.html") Contact
	+header()
		+top-nav()
			li.menu-item: a.current(href="/") Home
			li.menu-item: a(href="/about.html") About
			li.menu-item: a(href="/contact.html") Contact
	main
		+sAbout()
		+sTop({
			hasDigits: false,
			hasLearnMore: false,
			addRowClasses: "flex-md-row-reverse"
		})(class="sTop--alt")
		+sAwards()
	+footer()
		li.menu-item: a.current(href="/") Home
		li.menu-item: a(href="/about.html") About
		li.menu-item: a(href="/contact.html") Contact